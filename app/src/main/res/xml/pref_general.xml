<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditTextPreference
        android:defaultValue="@string/pref_default_value"
        android:inputType="text"
        android:key="@string/pref_key_location"
        android:singleLine="true"
        android:title="@string/pref_title_location" />

    <ListPreference
        android:defaultValue="@string/pref_default_units_metric"
        android:entries="@array/pref_units_options"
        android:entryValues="@array/pref_units_values"
        android:key="@string/pref_key_units"
        android:title="@string/pref_title_units"

        />

</PreferenceScreen>